<html>

    <head>
        <meta charset="utf-8">
        <title>Library</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

    </head>
    <body>

        <div class="container">


            <div>

                {% if books is not empty %}
                    <p>Here are some books!</p>
                    <ul>
                        {% for book in books %}
                            <li>{{ book.getTitle }}</li>
                            {% set books = book.getAuthors %}
                                {% for book in books %}
                                    <ul>
                                        <li>{{ book.getName }}</li>
                                    </ul>
                                    <br/>
                                {% endfor %}
                        {% endfor %}
                    </ul>
                {% endif %}


            </div>

            <div>

                <form action='/author_book' method='post'>
                    <label for='title'>Book Title:</label>
                    <input id='title' name='title' type='text' placeholder='Dune'>
                    <label for='name'>Author Name:</label>
                    <input id='name' name='name' type='text' placeholder='Frank Herbert'>

                    <button type='submit'>Add</button>
                </form>

                <form action='/delete_all' method='post'>
                    <button type='submit'>Clear</button>
                </form>

                <p><a href='/'>Home</a></p>

            </div>

        </div>


    </body>



</html>
