<html>

    <head>
        <meta charset="utf-8">
        <title>Library</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

    </head>
    <body>

        <div class=container>

            {% if books is not empty %}
                <p>Here are some books!</p>
                <ul>
                    {% for book in books %}
                        <li>{{ book.getTitle }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if authors is not empty %}
                <p>Here are some authors!</p>
                <ul>
                    {% for author in authors %}
                        <li>{{ author.getName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}


            <form action='/author_book' method='post'>
                <label for='title'>Book Title:</label>
                <input id='title' name='title' type='text' placeholder='Dune'>
                <label for='name'>Author Name:</label>
                <input id='name' name='name' type='text' placeholder='Frank Herbert'>

                <button type='submit'>Add</button>
            </form>

            <form action='/delete_books' method='post'>
                <button type='submit'>Clear</button>
            </form>

        </div>


    </body>



</html>
